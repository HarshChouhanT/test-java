GET     /tasks                  controllers.TaskController.getAllTasks
GET     /tasks/:id              controllers.TaskController.getTask(id: Long)
POST    /tasks                  controllers.TaskController.createTask(request: Http.Request)
PUT     /tasks/:id              controllers.TaskController.updateTask(request: Http.Request, id: Long)
DELETE  /tasks/:id              controllers.TaskController.deleteTask(id: Long)
